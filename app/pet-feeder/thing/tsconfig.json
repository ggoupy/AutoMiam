{
    "compilerOptions": {
        "target": "ES2016",
        "lib": ["ES2016", "dom"],
        "module": "commonjs",
        "outDir": "./dist",
        "alwaysStrict": true,
        "sourceMap": true,
        "noLib": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false
    },
    "exclude": ["node_modules"],
    "include": ["./**/*"]
}